    "@testing-library/user-event": "^14.5.0",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.15.24",
    "@types/react": "^19.1.12",
