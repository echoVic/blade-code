{
  "permissions": {
    "allow": [
      "Read(file_path:**/*.ts)",
      "Read(file_path:**/*.js)",
      "Read(file_path:**/*.tsx)",
      "Read(file_path:**/*.md)",
      "Glob(pattern:**/*.{ts,js,tsx})",
      "Grep"
    ],
    "ask": [
      "Write",
      "Edit",
      "Bash(command:npm *)",
      "Bash(command:git *)"
    ],
    "deny": [
      "Read(file_path:.env)",
      "Read(file_path:.env.*)",
      "Read(file_path:**/.env)",
      "Read(file_path:**/*.key)",
      "Read(file_path:**/*.secret)",
      "Bash(command:rm -rf *)",
      "Bash(command:sudo *)"
    ]
  },
  "hooks": {
    "PreToolUse": {
      "Read": "echo '读取文件: {file_path}'",
      "Write": "echo '写入文件: {file_path}'"
    },
    "PostToolUse": {
      "Write": "git add {file_path}"
    }
  },
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "blade:*"
  },
  "disableAllHooks": false,
  "cleanupPeriodDays": 30,
  "includeCoAuthoredBy": true
}
